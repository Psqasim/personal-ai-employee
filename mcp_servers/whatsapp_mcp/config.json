{
  "_comment": "WhatsApp MCP Server Configuration Template",
  "_note": "Actual session path should be set via WHATSAPP_SESSION_PATH environment variable",

  "session": {
    "path": "/home/user/.whatsapp_session",
    "expiry_days": 90
  },

  "selectors": {
    "SEARCH_BOX": "div[contenteditable=\"true\"][data-tab=\"3\"]",
    "MESSAGE_INPUT": "div[contenteditable=\"true\"][data-tab=\"10\"]",
    "SEND_BUTTON": "button[data-tab=\"11\"]",
    "QR_CODE": "canvas[aria-label=\"Scan this QR code to link a device!\"]"
  },

  "retry": {
    "max_attempts": 3,
    "backoff_seconds": [5, 10, 20]
  }
}
