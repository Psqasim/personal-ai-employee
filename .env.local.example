# ========================================
# PLATINUM TIER - LOCAL AGENT (.env.local)
# ========================================
# Deploy: User's laptop
# Role: Approvals, MCP execution, Git pull, send/post
# Security: HAS ALL credentials (SMTP/WhatsApp/Social/Odoo)

# Inherit from main .env.example + Local-specific
TIER=platinum
ENABLE_CLOUD_AGENT=false
VAULT_PATH=/home/user/personal-ai-employee/vault

# Git Sync (Local pulls every 60s)
GIT_REMOTE_URL=git@github.com:user/vault.git
GIT_BRANCH=main
GIT_SYNC_INTERVAL=60

# Claude API
CLAUDE_API_KEY=sk-ant-xxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ✅ Email MCP (Local sends after approval)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=user@gmail.com
SMTP_PASSWORD=app-password-16-chars

# ✅ WhatsApp MCP (Local sends messages)
WHATSAPP_SESSION_PATH=/home/user/.whatsapp_session.json
WHATSAPP_POLL_INTERVAL=30
WHATSAPP_KEYWORDS=urgent,invoice,payment

# ✅ LinkedIn MCP (Local posts)
LINKEDIN_ACCESS_TOKEN=oauth2-token
LINKEDIN_AUTHOR_URN=urn:li:person:xxx

# ✅ Social MCPs (Local posts)
FACEBOOK_ACCESS_TOKEN=fb-token
INSTAGRAM_ACCESS_TOKEN=ig-token
TWITTER_API_KEY=twitter-key
TWITTER_API_SECRET=twitter-secret
TWITTER_ACCESS_TOKEN=twitter-token
TWITTER_ACCESS_SECRET=twitter-access-secret

# ✅ Odoo MCP (Local creates drafts)
ENABLE_ODOO=true
ODOO_URL=https://odoo.domain.com:8069
ODOO_DB=platinum_business
ODOO_USER=admin
ODOO_PASSWORD=odoo-password

# Next.js Dashboard
DASHBOARD_URL=http://localhost:3000
NEXT_AUTH_ENABLED=true
DASHBOARD_PASSWORD=secure-password
SESSION_SECRET=32-char-random-secret
PORT=3000
