# Personal AI Employee - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================================
# Bronze Tier Configuration (required for all tiers)
# ============================================================

# Absolute path to your Obsidian vault directory
VAULT_PATH=/path/to/your/vault

# Polling interval in seconds for inbox watcher (default: 30)
POLLING_INTERVAL=30

# ============================================================
# Silver Tier - AI Analysis (required for AI features)
# ============================================================

# Toggle Silver tier AI features (set to true to enable)
ENABLE_AI_ANALYSIS=false

# Anthropic Claude API key (get from https://console.anthropic.com/)
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# Claude model to use for analysis (Sonnet 4.5 - latest)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ============================================================
# Silver Tier - Gmail Watcher
# ============================================================

# Path to Gmail OAuth2 credentials JSON file (from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=~/.config/personal-ai-employee/gmail_credentials.json

# Gmail API polling interval in seconds (default: 120 = 2 minutes)
GMAIL_POLL_INTERVAL=120

# ============================================================
# Silver Tier - WhatsApp Watcher
# ============================================================

# Path to persistent WhatsApp session storage directory
WHATSAPP_SESSION_PATH=~/.config/personal-ai-employee/whatsapp_session

# Comma-separated keywords to monitor (no spaces around commas)
WHATSAPP_KEYWORDS=urgent,invoice,payment,help,asap

# ============================================================
# Silver Tier - LinkedIn Generator
# ============================================================

# Posting frequency: daily | weekly | biweekly
LINKEDIN_POSTING_FREQUENCY=daily

# Section name in Company_Handbook.md to read business goals from
LINKEDIN_BUSINESS_GOALS_SECTION=Business Goals

# ============================================================
# Silver Tier - Cost Control
# ============================================================

# Maximum daily API spend in USD (default: $0.10)
API_DAILY_COST_LIMIT=0.10

# Maximum API calls per minute (default: 10)
API_RATE_LIMIT_PER_MIN=10

# Response cache duration in seconds (default: 86400 = 24 hours)
API_CACHE_DURATION=86400

# ============================================================
# Gold Tier - Autonomous Execution & MCP Servers
# ============================================================

# Enable Gold tier plan execution (requires MCP servers configured)
ENABLE_PLAN_EXECUTION=true

# Tier identifier (bronze | silver | gold)
TIER=gold

# ============================================================
# Gold Tier - Email MCP (SMTP Send)
# ============================================================

# SMTP server configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com

# Gmail App Password (NOT your Gmail password!)
# Generate at: https://myaccount.google.com/apppasswords
# Requires 2-Step Verification enabled
SMTP_PASSWORD=your-16-char-app-password

# ============================================================
# Gold Tier - WhatsApp MCP (Playwright Automation)
# ============================================================

# Path to persistent Playwright session (QR auth saved here)
WHATSAPP_SESSION_PATH=~/.config/personal-ai-employee/whatsapp_session

# WhatsApp polling interval in seconds (default: 30)
WHATSAPP_POLL_INTERVAL=30

# Keywords for priority detection (comma-separated, no spaces)
WHATSAPP_KEYWORDS=urgent,meeting,payment,deadline,invoice,asap,help,client,contract

# ============================================================
# Platinum Tier - WhatsApp Admin Notifications
# ============================================================

# Enable proactive WhatsApp notifications to admin (true/false)
ENABLE_WHATSAPP_NOTIFICATIONS=true

# Admin WhatsApp number (E.164 format: +<country><number>)
WHATSAPP_NOTIFICATION_NUMBER=+1234567890

# Daily Claude API cost threshold for alerts (USD)
COST_ALERT_THRESHOLD=1.00

# ============================================================
# Gold Tier - LinkedIn MCP (LinkedIn API v2)
# ============================================================

# LinkedIn OAuth2 access token
# Get from: https://www.linkedin.com/developers/apps
# Required scope: w_member_social
LINKEDIN_ACCESS_TOKEN=your-oauth2-access-token

# LinkedIn author URN (your person identifier)
# Get by calling: curl -H "Authorization: Bearer YOUR_TOKEN" https://api.linkedin.com/v2/me
# Format: urn:li:person:abc123xyz
LINKEDIN_AUTHOR_URN=urn:li:person:your-linkedin-id

# ============================================================
# Gold Tier - Odoo MCP (Optional - Accounting Integration)
# ============================================================

# Enable Odoo integration (set to false to disable)
ENABLE_ODOO=false

# Odoo server URL (local or remote)
ODOO_URL=http://localhost:8069

# Odoo database name
ODOO_DB=your-odoo-database

# Odoo credentials (admin or user with accounting permissions)
ODOO_USER=admin
ODOO_PASSWORD=your-odoo-password

# ============================================================
# Gold Tier - Ralph Wiggum Loop Configuration
# ============================================================

# Maximum iterations for plan execution loop (default: 10)
MAX_PLAN_ITERATIONS=10

# Maximum retries per failed step (default: 3)
PLAN_STEP_RETRY_COUNT=3

# ============================================================
# Gold Tier - Cost Alerts & Monitoring
# ============================================================

# Daily Claude API cost thresholds (USD)
CLAUDE_API_COST_ALERT_1=0.10
CLAUDE_API_COST_ALERT_2=0.25
CLAUDE_API_COST_ALERT_3=0.50

# Log retention in days (default: 90)
LOG_RETENTION_DAYS=90
