# Personal AI Employee - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================================
# Bronze Tier Configuration (required for all tiers)
# ============================================================

# Absolute path to your Obsidian vault directory
VAULT_PATH=/path/to/your/vault

# Polling interval in seconds for inbox watcher (default: 30)
POLLING_INTERVAL=30

# ============================================================
# Silver Tier - AI Analysis (required for AI features)
# ============================================================

# Toggle Silver tier AI features (set to true to enable)
ENABLE_AI_ANALYSIS=false

# Anthropic Claude API key (get from https://console.anthropic.com/)
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# Claude model to use for analysis
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ============================================================
# Silver Tier - Gmail Watcher
# ============================================================

# Path to Gmail OAuth2 credentials JSON file (from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=~/.config/personal-ai-employee/gmail_credentials.json

# Gmail API polling interval in seconds (default: 120 = 2 minutes)
GMAIL_POLL_INTERVAL=120

# ============================================================
# Silver Tier - WhatsApp Watcher
# ============================================================

# Path to persistent WhatsApp session storage directory
WHATSAPP_SESSION_PATH=~/.config/personal-ai-employee/whatsapp_session

# Comma-separated keywords to monitor (no spaces around commas)
WHATSAPP_KEYWORDS=urgent,invoice,payment,help,asap

# ============================================================
# Silver Tier - LinkedIn Generator
# ============================================================

# Posting frequency: daily | weekly | biweekly
LINKEDIN_POSTING_FREQUENCY=daily

# Section name in Company_Handbook.md to read business goals from
LINKEDIN_BUSINESS_GOALS_SECTION=Business Goals

# ============================================================
# Silver Tier - Cost Control
# ============================================================

# Maximum daily API spend in USD (default: $0.10)
API_DAILY_COST_LIMIT=0.10

# Maximum API calls per minute (default: 10)
API_RATE_LIMIT_PER_MIN=10

# Response cache duration in seconds (default: 86400 = 24 hours)
API_CACHE_DURATION=86400
